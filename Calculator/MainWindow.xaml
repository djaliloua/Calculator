<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.MVVM.Views.Standard"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        DataContext="{Binding Source={StaticResource locator}, Path=MainViewModel}"
        Title="Calculator"
        x:Name="window"
        MinHeight="690"
        MinWidth="370">
    <!-- Modern gradient background while preserving MaterialDesign window chrome -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1E3C72" Offset="0" />
            <GradientStop Color="#FF2A5298" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <materialDesign:DialogHost DialogTheme="Inherit"
                               Identifier="RootDialog">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="240" Background="#FF0F1724">
                    <!-- Drawer header -->
                    <StackPanel Orientation="Horizontal" Margin="16" DockPanel.Dock="Top" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Calculator" Width="36" Height="36" Foreground="White" />
                        <StackPanel Margin="8,0,0,0">
                            <TextBlock Text="Calculator" FontWeight="Bold" Foreground="White" FontSize="16" />
                            <TextBlock Text="Fast. Beautiful." Foreground="#FFB0C4DE" FontSize="12" />
                        </StackPanel>
                    </StackPanel>

                    <Separator Margin="8" Background="#33FFFFFF" />

                    <ListBox ItemsSource="{Binding Controls}"
                             x:Name="listbox"
                             PreviewMouseLeftButtonUp="UIElement_OnPreviewMouseLeftButtonUp"
                             SelectedItem="{Binding SelectedControl}"
                             Style="{StaticResource MaterialDesignNavigationPrimaryListBox}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             Margin="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="8" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="{Binding Kind}" Margin="2,0,10,0" Foreground="#FFB0C4DE" />
                                    <TextBlock Text="{Binding Title}" Foreground="White" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel>
                <!-- Header area -->
                <materialDesign:ColorZone Padding="12"
                                          materialDesign:ElevationAssist.Elevation="Dp8"
                                          DockPanel.Dock="Top"
                                          DataContext="{Binding ElementName=window, Path=DataContext}"
                                          Mode="PrimaryMid"
                                          Background="#0010182B">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ToggleButton x:Name="MenuToggleButton"
                                          IsChecked="{Binding CloseLeftDrawer}"
                                          Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                            <TextBlock Text="Calculator" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Margin="12,0,0,0" Foreground="White" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                            <materialDesign:PopupBox HorizontalAlignment="Right"
                                                     Focusable="False"
                                                     Closed="PopupBox_Closed"
                                                     PlacementMode="BottomAndAlignRightEdges"
                                                     StaysOpen="True">
                                <StackPanel Focusable="False">
                                    <Grid Margin="10" Focusable="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock Margin="0,0,10,0" Text="Light" />
                                        <ToggleButton x:Name="DarkModeToggleButton" Focusable="False" IsChecked="{Binding IsDark}" Grid.Column="1" />
                                        <TextBlock Grid.Column="2" Margin="10,0,0,0" Text="Dark" />
                                    </Grid>
                                </StackPanel>
                            </materialDesign:PopupBox>

                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Settings" Margin="8,0,0,0">
                                <materialDesign:PackIcon Kind="Cog" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

                <!-- Main content area: put selected control in a rounded elevated card -->
                <Grid Margin="24">
                    <Border CornerRadius="16" Padding="18" Background="#FFFFFFFF" Opacity="0.98" 
                            materialDesign:ElevationAssist.Elevation="Dp8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <!-- Keep the existing content binding so specialized views render as before -->
                        <ContentControl Content="{Binding ElementName=listbox, 
                    Path=SelectedItem.UserControl}"
                                        x:Name="content"
                                        Padding="20" />
                    </Border>

                    <!-- Subtle decorative overlay in top-right for style -->
                    <!--<Ellipse Width="160" Height="160" Fill="Yellow" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0" />-->
                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>
