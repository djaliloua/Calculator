    </Style>

    <!-- ContextMenu Style -->
    <Style TargetType="ContextMenu">
        <Setter Property="Background"
                Value="LightBlue"  />
        <Setter Property="BorderBrush"
                Value="Black" />
        <Setter Property="BorderThickness"
                Value="2" />
    </Style>
</ResourceDictionary>