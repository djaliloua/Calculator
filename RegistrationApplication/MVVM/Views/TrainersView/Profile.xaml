                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>

                    </Style>
                </TextBox.Style>-->
            </TextBox>
            <TextBox MaxWidth="400"
                     VerticalAlignment="Top"
                     Width="200"
                     IsReadOnly="True"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="{Binding EducationLevel}"
                     TextWrapping="Wrap"
                     Margin="10">
